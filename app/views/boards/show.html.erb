<table id="bingo-board" style="height: 50%;">
  <% @board.beers.each_with_index do |beer, index| %>
    <% if (index + 1) % 5 == 1 %>
      <tr style="height: 182px; padding: none">
    <% end %>
    <td style="width: 20%; border-style: solid; background-color: black">
      <button id="<%= "#{@board.id}/#{index}" %>" class="bingo-button" style="text-align: center; width: 100%; height: 100%; background-color: <%= beer['drank'] ? 'lightgreen;' : 'white;' %>">
        <h1><%= beer['beer'] %></h1>
      </button>
    </td>
    <% if (index + 1) % 5 == 0 %>
      </tr>
    <% end %>
  <% end %>
</div>
<table style="height: 50%; width: 100%; border-style: solid;">
  <tr>
    <td style="max-width: 50%">
      <div style="overflow-y: scroll; height: 200px; border-style: solid;">
        <table id="drink_log">
          <% @drink_log.each do |drank| %>
            <tr>
              <td>
                <%= "#{drank.created_at.strftime('%l:%M %p')} #{drank.drinker} drank a #{drank.beer}" %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </td>
    <td style="max-width: 50%">
      <div style="overflow-y: scroll; height: 200px; border-style: solid;">
        <table id="drink_log">
          <% @drink_log.each do |drank| %>
            <tr>
              <td>
                <%= "#{drank.created_at.strftime('%l:%M %p')} #{drank.drinker} drank a #{drank.beer}" %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </td>
  </tr>
</table>
